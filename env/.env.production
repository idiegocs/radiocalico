# Production Environment Configuration
# This file should be committed to version control
# WARNING: Change sensitive values (passwords, secrets) before deploying

# Application
NODE_ENV=production
APP_PORT=3001

# Logging Configuration
# Levels: error, warn, info, http, verbose, debug, silly
# Production: use 'info' or 'warn' for less verbose logs
LOG_LEVEL=info

# PostgreSQL Database
# IMPORTANT: Change these credentials for production!
POSTGRES_USER=radio_user
POSTGRES_PASSWORD=dics_prod
POSTGRES_DB=radiocalico_db_prod
POSTGRES_PORT=5433

# PostgreSQL Logging Configuration
# log_statement options: none, ddl, mod, all
# mod = only log data-modifying queries (INSERT, UPDATE, DELETE)
POSTGRES_LOG_STATEMENT=mod
# Log only queries taking longer than 1000ms (1 second)
POSTGRES_LOG_MIN_DURATION=1000

# Database Connection Pool (optional - uses defaults if not set)
# Production puede necesitar más conexiones si hay alto tráfico
# Max connections in pool (default: 20, consider 30-50 for high traffic)
DB_POOL_MAX=30
# Min connections in pool (default: 2, consider 5 for high traffic)
DB_POOL_MIN=5
# Idle timeout in milliseconds (default: 30000 = 30s)
DB_IDLE_TIMEOUT=30000
# Connection timeout in milliseconds (default: 2000 = 2s)
DB_CONNECTION_TIMEOUT=2000
# Max uses before recycling connection (default: 7500)
DB_MAX_USES=7500

# Note: Adminer is not included in production for security reasons

# Datadog Configuration
# Get your API key from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=eaa8e59ad880a0750392b3986c05a78e
DD_SITE=datadoghq.com
DD_ENV=production
DD_SERVICE=radiocalico
DD_VERSION=1.0.0
# Enable logs collection
DD_LOGS_ENABLED=true
DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL=true
