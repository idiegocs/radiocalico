# Development Environment Configuration
# This file should be committed to version control

# Application
NODE_ENV=development
APP_PORT=3000

# Logging Configuration
# Levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=debug

# PostgreSQL Database
POSTGRES_USER=radio_user
POSTGRES_PASSWORD=dics
POSTGRES_DB=radiocalico_db_dev
POSTGRES_PORT=5432

# PostgreSQL Logging Configuration
# log_statement options: none, ddl, mod, all
# all = log all queries (useful for development)
POSTGRES_LOG_STATEMENT=all
# Log queries taking longer than this many milliseconds (0 = log all durations)
POSTGRES_LOG_MIN_DURATION=0

# Database Connection Pool (optional - uses defaults if not set)
# Max connections in pool (default: 20)
DB_POOL_MAX=20
# Min connections in pool (default: 2)
DB_POOL_MIN=2
# Idle timeout in milliseconds (default: 30000 = 30s)
DB_IDLE_TIMEOUT=30000
# Connection timeout in milliseconds (default: 2000 = 2s)
DB_CONNECTION_TIMEOUT=2000
# Max uses before recycling connection (default: 7500)
DB_MAX_USES=7500

# Adminer (Database Management UI - only for development)
ADMINER_PORT=8080

# Datadog Configuration
# Get your API key from: https://app.datadoghq.com/organization-settings/api-keys
DD_API_KEY=201bf15bbe22e6d62304abd70901e3c8
DD_SITE=datadoghq.com
DD_ENV=development
DD_SERVICE=radiocalico
DD_VERSION=1.0.0
# Enable logs collection
DD_LOGS_ENABLED=true
DD_LOGS_CONFIG_CONTAINER_COLLECT_ALL=true
